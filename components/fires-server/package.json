{
  "name": "@fedimod/fires-server",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0",
  "homepage": "https://fires.fedimod.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fedimod/fires.git"
  },
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "clean": "rimraf ./build",
    "dev": "node ace serve --hmr",
    "test": "c8 node --loader ts-node-maintained/esm bin/test.ts",
    "lint": "eslint .",
    "migrate": "node ace migration:run",
    "migrate:fresh": "node ace migration:fresh",
    "format": "prettier --ignore-path .gitignore --write .",
    "format:check": "prettier --ignore-path .gitignore --check .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#serializers/*": "./app/serializers/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#utils/*": "./app/utils/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@faker-js/faker": "^9.6.0",
    "@japa/api-client": "^3.0.3",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.10.18",
    "@types/luxon": "^3.4.2",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.13.2",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "eslint": "^9.20.1",
    "hot-hook": "^0.4.0",
    "light-my-request": "^6.6.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "timekeeper": "^2.3.1",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.7",
    "vite": "^6.3.4",
    "yalc": "1.0.0-pre.53"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.3.1",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/i18n": "^2.2.0",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/shield": "^8.1.2",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@fedify/fedify": "^1.4.6",
    "@picocss/pico": "^2.0.6",
    "@thisismissem/adonisjs-respond-with": "^2.1.1",
    "@vinejs/vine": "^3.0.0",
    "dedent": "^1.5.3",
    "edge.js": "^6.2.1",
    "luxon": "^3.5.0",
    "markdown-it": "^14.1.0",
    "pg": "^8.13.3",
    "pg-connection-string": "^2.8.5",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "c8": {
    "exclude": [
      "database/migrations",
      "bin",
      "tests"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
